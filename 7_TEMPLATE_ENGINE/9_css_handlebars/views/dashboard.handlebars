
<h1>Dashboard</h1>

<p>O nome dele é {{user.name}} {{user.surname}}</p>

<h1>Olá Handlebars</h1>

<table class="table table-striped table-hover table-bordered ">
    <thead>
        <tr class="table-dark">
            <th scope="col">Nome</th>
            <th scope="col">Preço</th>
            <th scope="col">Frágil</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        {{#each products}}
            <tr class="table-primary">
                <td>{{this.name}}</td>
                <td >{{this.price}}</td>
                <td>
                    {{#if this.fragil}}
                    Sim
                    {{else}}
                    Não
                    {{/if}}
                </td>
            </tr>
        {{/each}}
    </tbody>
    <tfoot>
        <tr>
            <td class="table-secondary">Total de produtos: {{products.length}}</td>
            <td colspan=2 class="table-secondary">Valor total dos produtos: {{total}}</td>
            
        </tr>
    </tfoot>

</table>
<br>

<form method="get" action="/">
    <button type="submit" class="btn btn-dark">Voltar</button>
</form>